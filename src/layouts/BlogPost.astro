---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				margin: 0;
                background: #fff;
			}
			.hero-image {
				width: 100%;
                margin-bottom: 3rem;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 0; /* Full width option? Or keep rounded? Let's keep container narrow, image wide? */
                /* User said "Elegant". Usually wide image, narrow text. */
                border-radius: 0; 
				box-shadow: var(--box-shadow);
                max-height: 600px;
                object-fit: cover;
                width: 100%;
			}
            /* If we want the image to be contained, we can wrap it. 
               Let's make the hero image wide but not full bleed if container constraint exists. 
               Actually, for a blog post, a contained image is often better.
               Let's revert to contained.
            */
            .hero-container {
                max-width: 960px;
                margin: 0 auto;
                padding: 0 1rem;
            }
            .hero-image img {
                border-radius: 12px;
                width: 100%;
            }

			.prose {
				width: 100%;
				max-width: 720px; /* Optimal reading width */
				margin: 0 auto;
				padding: 2rem 1rem;
				color: var(--gray-dark);
                font-size: 1.15rem; /* Larger font */
                line-height: 1.8;
                font-family: var(--font-body);
			}
			.title {
				margin-bottom: 2rem;
				padding: 1rem 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
                font-family: var(--font-heading); /* Serif */
                font-size: 2.5rem;
                color: var(--color-primary);
			}
			.date {
				margin-bottom: 1rem;
				color: var(--gray);
                font-family: var(--font-body);
                text-transform: uppercase;
                letter-spacing: 0.05em;
                font-size: 0.9rem;
			}
            
            /* Typography within prose */
            .prose h2, .prose h3, .prose h4 {
                color: var(--color-primary);
                font-family: var(--font-heading);
                margin-top: 2.5rem;
                margin-bottom: 1rem;
            }
            .prose p {
                margin-bottom: 1.5rem;
            }
            .prose a {
                color: var(--color-red);
                text-decoration: none;
                border-bottom: 1px solid transparent;
                transition: border-color 0.2s;
            }
            .prose a:hover {
                border-bottom-color: var(--color-red);
            }
            .prose blockquote {
                border-left: 4px solid var(--color-red);
                padding-left: 1rem;
                margin-left: 0;
                font-style: italic;
                color: var(--color-secondary);
                background: var(--color-warm-bg);
                padding: 1.5rem;
                border-radius: 0 8px 8px 0;
            }
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-container">
                    <div class="hero-image">
                        {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
                    </div>
                </div>
				<div class="prose container-narrow">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
