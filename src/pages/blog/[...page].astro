---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	);
	return paginate(posts, { pageSize: 12 });
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Global Variables Local Scope */
            :root {
                --gap: 4rem; /* Larger Gap as requested */
            }
            
            main {
				width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 4rem 1rem; /* More vertical breathing room */
			}
            
			/* Bento Grid System */
			.bento-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
                grid-auto-rows: 480px; /* Taller to fit description */
				gap: var(--gap);
				list-style-type: none;
				padding: 0;
			}
            
            /* Card Styles - Premium Business Style */
			.post-card {
                position: relative;
				transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
                background: white;
                /* Red Accent Border on Left */
                border-left: 4px solid var(--color-red);
                /* Subtle border elsewhere for definition */
                border-right: 1px solid rgba(0,0,0,0.05);
                border-top: 1px solid rgba(0,0,0,0.05);
                border-bottom: 1px solid rgba(0,0,0,0.05);
                border-radius: 4px; /* Sharper corners like Monocle/Business */
                overflow: hidden;
                /* Premium "Floaty" Shadow */
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
                display: flex;
                flex-direction: column;
                height: 100%;
			}
            .post-card a {
                text-decoration: none;
                color: inherit;
                height: 100%;
                display: flex;
                flex-direction: column;
            }
            
            /* Top Image Area */
            .image-container {
                width: 100%;
                height: 55%; /* Slightly less image to give room for text */
                overflow: hidden;
                position: relative;
            }
			.post-card img {
				width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.6s ease;
			}
            
            /* Bottom Content Area */
            .content {
                height: 45%; 
                padding: 2rem; /* Generous Padding */
                display: flex;
                flex-direction: column;
                justify-content: space-between; /* Space out title/desc/date */
                background: white;
            }

            .post-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
            }
            .post-card:hover img {
                transform: scale(1.08);
            }
            
			.title {
				margin: 0 0 1rem 0;
				color: var(--black);
				line-height: 1.3;
                font-family: var(--font-heading);
                font-size: 1.4rem;
                font-weight: 700;
                /* Limit to 2 lines */
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
			}
            
            .excerpt {
                font-size: 1rem;
                color: #555;
                line-height: 1.6;
                margin-bottom: 1rem;
                /* Limit to 3 lines */
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
                font-family: serif; /* Monocle vibe */
            }

			.date {
				margin: 0;
				color: #888;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                font-weight: 500;
			}
            
            /* Hover Effect */
            .post-card:hover .title {
                color: var(--color-red);
            }
            
            /* --- BENTO LOGIC --- */
            
            /* Item 1: Hero */
			.post-card:nth-child(6n+1) {
				grid-column: span 12;
                grid-row: span 1; 
			}
            .post-card:nth-child(6n+1) .title {
                font-size: 2.2rem;
                -webkit-line-clamp: 3;
            }
            .post-card:nth-child(6n+1) .excerpt {
                font-size: 1.1rem;
                -webkit-line-clamp: 3;
            }

            /* Items 2 & 3 */
            .post-card:nth-child(6n+2),
            .post-card:nth-child(6n+3) {
                grid-column: span 6;
            }
            
            /* Items 4-6 */
            .post-card:nth-child(6n+4),
            .post-card:nth-child(6n+5),
            .post-card:nth-child(6n+6) {
                grid-column: span 4;
            }

            /* Responsive */
			@media (max-width: 960px) {
				.post-card:nth-child(n) { grid-column: span 6; }
                .post-card:nth-child(6n+1) { grid-column: span 12; }
                .title { font-size: 1.25rem; }
			}
            @media (max-width: 600px) {
                .post-card:nth-child(n) { grid-column: span 12 !important; }
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
            
			<section class="bento-grid">
				{
					page.data.map((post) => (
                        <a href={`/blog/${post.id}/`} class="post-card">
                            <div class="image-container">
                                <img width={720} height={360} src={post.data.heroImage} alt="" />
                            </div>
                            <div class="content">
                                <div>
                                    <h4 class="title">{post.data.title}</h4>
                                    <p class="excerpt">{post.data.description}</p>
                                </div>
                                <FormattedDate date={post.data.pubDate} class="date" />
                            </div>
                        </a>
					))
				}
			</section>
            
            <!-- Pagination Controls -->
            <div class="pagination">
                {page.url.prev ? <a href={page.url.prev}>&larr; 上一頁</a> : null}
                <span class="page-count">第 {page.currentPage} 頁 / 共 {page.lastPage} 頁</span>
                {page.url.next ? <a href={page.url.next}>下一頁 &rarr;</a> : null}
            </div>
		</main>
		<Footer />
	</body>
</html>
