---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	);
	return paginate(posts, { pageSize: 12 });
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Global Variables Local Scope */
            :root {
                --gap: 2rem;
            }
            
            main {
				width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 3rem 1rem;
			}
            
			/* Bento Grid System */
			.bento-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 2rem; /* Explicit gap */
				list-style-type: none;
				padding: 0;
			}
            
            /* ... Post Card Styles ... */
            
            /* --- BENTO LOGIC (Pattern: 12-6-6-4-4-4) --- */
            
            /* Item 1: Hero (Full Width, Image Top) */
			.post-card:nth-child(6n+1) {
				grid-column: span 12;
                display: flex;
                flex-direction: column; /* Image Top */
			}
            /* Make Hero Image taller/wider */
            .post-card:nth-child(6n+1) .image-container {
                aspect-ratio: 21/9; /* Cinematic */
                width: 100%;
                min-height: auto;
            }
             .post-card:nth-child(6n+1) .content {
                 width: 100%;
                 justify-content: flex-start;
                 padding: 2rem;
             }
            .post-card:nth-child(6n+1) .title {
                font-size: 2.5rem;
            }

            /* Items 2 & 3: Half Width */
            .post-card:nth-child(6n+2),
            .post-card:nth-child(6n+3) {
                grid-column: span 6;
            }
            
            /* Items 4, 5, 6: Third Width */
            .post-card:nth-child(6n+4),
            .post-card:nth-child(6n+5),
            .post-card:nth-child(6n+6) {
                grid-column: span 4;
            }

			@media (max-width: 960px) {
                /* Tablet: 2 cols */
				.post-card:nth-child(n) {
                    grid-column: span 6;
                }
                .post-card:nth-child(6n+1) {
                    grid-column: span 12;
                    flex-direction: column;
                }
                .post-card:nth-child(6n+1) .image-container {
                    width: 100%;
                    aspect-ratio: 16/9;
                }
                .post-card:nth-child(6n+1) .content {
                    width: 100%;
                    padding: 1.5rem;
                }
			}
            @media (max-width: 600px) {
                /* Mobile: 1 col */
                .post-card:nth-child(n) {
                    grid-column: span 12 !important;
                }
                .title { font-size: 1.25rem; }
                .post-card:nth-child(6n+1) .title { font-size: 1.75rem; }
                .post-card:nth-child(6n+1) { flex-direction: column; }
            }
            
            /* Pagination Styles */
            .pagination {
                display: flex;
                justify-content: center;
                gap: 1rem;
                margin-top: 4rem;
                align-items: center;
            } 
            /* (Rest of pagination styles match existing) */
		</style>
	</head>
	<body>
		<Header />
		<main>

            
			<section class="bento-grid">
				{
					page.data.map((post) => (
                        <a href={`/blog/${post.slug}/`} class="post-card">
                            <img width={720} height={360} src={post.data.heroImage} alt="" class="post-image" />
                            <div class="post-content">
                                <h4 class="post-title">{post.data.title}</h4>
                                <FormattedDate date={post.data.pubDate} class="post-date" />
                            </div>
                        </a>
					))
				}
			</section>
            
            <!-- Pagination Controls -->
            <div class="pagination">
                {page.url.prev ? <a href={page.url.prev}>&larr; 上一頁</a> : null}
                <span class="page-count">第 {page.currentPage} 頁 / 共 {page.lastPage} 頁</span>
                {page.url.next ? <a href={page.url.next}>下一頁 &rarr;</a> : null}
            </div>
		</main>
		<Footer />
	</body>
</html>
