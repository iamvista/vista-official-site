---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	);
	return paginate(posts, { pageSize: 12 });
}

// Pagination Logic
const { currentPage, lastPage } = page;
const pageNumbers = [];
if (lastPage <= 7) {
    for (let i = 1; i <= lastPage; i++) pageNumbers.push(i);
} else {
    // Always show 1
    pageNumbers.push(1);
    if (currentPage > 3) pageNumbers.push('...');
    
    // Show around current
    let start = Math.max(2, currentPage - 1);
    let end = Math.min(lastPage - 1, currentPage + 1);
    
    // Adjust if near start/end
    if (currentPage <= 3) { end = 4; }
    if (currentPage >= lastPage - 2) { start = lastPage - 3; }

    for (let i = start; i <= end; i++) pageNumbers.push(i);
    
    if (currentPage < lastPage - 2) pageNumbers.push('...');
    // Always show last
    pageNumbers.push(lastPage);
}
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Global Variables Local Scope */
            :root {
                --gap: 4rem;
            }
            
            main {
				width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 4rem 1rem;
			}
            
			/* Bento Grid System */
			.bento-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
                grid-auto-rows: 480px;
				gap: var(--gap);
				list-style-type: none;
				padding: 0;
			}
            
            /* Card Styles - Clean Premium Style */
			.post-card {
                position: relative;
				transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
                background: white;
                /* Clean Border */
                border: 1px solid rgba(0,0,0,0.05);
                /* Sharp Corners (Square) as requested */
                border-radius: 0;
                overflow: hidden;
                /* Premium "Floaty" Shadow */
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
                display: flex;
                flex-direction: column;
                height: 100%;
			}
            .post-card a {
                text-decoration: none !important; /* Force No Underline */
                color: inherit;
                height: 100%;
                display: flex;
                flex-direction: column;
            }
            .post-card a:hover {
                text-decoration: none !important;
            }
            
            /* Top Image Area (65%) */
            .image-container {
                width: 100%;
                height: 65%; 
                overflow: hidden;
                position: relative;
            }
			.post-card img {
				width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.6s ease;
			}
            
            /* Bottom Content Area (35%) */
            .content {
                height: 35%; 
                /* Reduced vertical padding (1.25rem) to reduce space below title */
                padding: 1.25rem 1.5rem; 
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                background: white;
            }
            
            /* Wrap Title and Date for flex spacing */
            .content-wrapper {
                display: flex;
                flex-direction: column;
                gap: 0.5rem; 
            }

            .post-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
            }
            .post-card:hover img {
                transform: scale(1.08);
            }
            
			.title {
				margin: 0;
				color: var(--black);
				line-height: 1.3;
                font-family: var(--font-heading);
                font-size: 1.4rem;
                font-weight: 700;
                /* Limit to 2 lines */
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-decoration: none !important; /* Double ensure */
			}
			.title:hover {
				text-decoration: none !important;
			}
            
			.date {
				margin: 0;
				color: #888;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                font-weight: 500;
                margin-top: auto; /* Push to bottom if space allows, or keep tight */
			}
            
            /* Hover Effect */
            .post-card:hover .title {
                color: var(--color-red);
            }
            
            /* --- BENTO LOGIC --- */
            
            /* Item 1: Hero */
			.post-card:nth-child(6n+1) {
				grid-column: span 12;
                grid-row: span 1; 
			}
            .post-card:nth-child(6n+1) .title {
                font-size: 2.2rem;
                -webkit-line-clamp: 3;
            }

            /* Items 2 & 3 */
            .post-card:nth-child(6n+2),
            .post-card:nth-child(6n+3) {
                grid-column: span 6;
            }
            
            /* Items 4-6 */
            .post-card:nth-child(6n+4),
            .post-card:nth-child(6n+5),
            .post-card:nth-child(6n+6) {
                grid-column: span 4;
            }

			@media (max-width: 960px) {
				.post-card:nth-child(n) { grid-column: span 6; }
                .post-card:nth-child(6n+1) { grid-column: span 12; }
                .title { font-size: 1.25rem; }
			}
            @media (max-width: 600px) {
                .post-card:nth-child(n) { grid-column: span 12 !important; }
            }
            
            /* Modern Pagination Styles */
            .pagination {
                display: flex;
                justify-content: center;
                gap: 0.5rem;
                margin-top: 6rem;
                align-items: center;
                flex-wrap: wrap;
            } 
            .btn {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 44px;
                height: 44px;
                border-radius: 50%;
                background: white;
                color: var(--gray-dark);
                text-decoration: none;
                font-weight: 600;
                transition: all 0.2s;
                border: 1px solid transparent;
            }
            .btn:hover {
                background: #f0f0f0;
                color: var(--color-primary);
                transform: translateY(-2px);
            }
            .btn.active {
                background: var(--color-red);
                color: white;
                box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
            }
            .btn-nav {
                width: auto;
                padding: 0 1.5rem;
                border-radius: 22px;
                border: 1px solid #eee;
            }
            .dots {
                color: var(--gray);
                padding: 0 0.5rem;
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
            
			<section class="bento-grid">
				{
					page.data.map((post) => (
                        <a href={`/blog/${post.id}/`} class="post-card">
                            <div class="image-container">
                                <img width={720} height={360} src={post.data.heroImage} alt="" />
                            </div>
                            <div class="content">
                                <h4 class="title">{post.data.title}</h4>
                                <FormattedDate date={post.data.pubDate} class="date" />
                            </div>
                        </a>
					))
				}
			</section>
            
            <!-- Modern Pagination -->
            <div class="pagination">
                {page.url.prev && (
                    <a href={page.url.prev} class="btn btn-nav">&larr; 上一頁</a>
                )}
                
                {pageNumbers.map(num => (
                    num === '...' ? 
                    <span class="dots">...</span> :
                    <a 
                        href={num === 1 ? '/blog' : `/blog/${num}`} 
                        class={`btn ${currentPage === num ? 'active' : ''}`}
                    >
                        {num}
                    </a>
                ))}
                
                {page.url.next && (
                    <a href={page.url.next} class="btn btn-nav">下一頁 &rarr;</a>
                )}
            </div>
		</main>
		<Footer />
	</body>
</html>
