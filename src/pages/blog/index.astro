---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
            :root {
                --gap: 24px;
            }
			main {
				width: 100%; /* Full width */
                max-width: 1400px; /* Wide container */
                margin: 0 auto;
                padding: 3rem 1rem;
			}
            
            /* Bento Grid System */
			.bento-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: var(--gap);
				list-style-type: none;
				padding: 0;
			}
            
            /* Card Styles */
			.post-card {
                position: relative;
				transition: all 0.3s ease;
                background: white;
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
                display: flex;
                flex-direction: column;
			}
            .post-card a {
                text-decoration: none;
                color: inherit;
                height: 100%;
                display: flex;
                flex-direction: column;
            }
            .image-container {
                width: 100%;
                overflow: hidden;
                aspect-ratio: 16/9;
            }
			.post-card img {
				width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
			}
            .post-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            }
            .post-card:hover img {
                transform: scale(1.05); /* Zoom effect */
            }
            
            .content {
                padding: 1.5rem;
                flex: 1;
                display: flex;
                flex-direction: column;
            }

			.title {
				margin: 0 0 0.5rem 0;
				color: var(--black);
				line-height: 1.3;
                font-family: var(--font-heading);
                font-size: 1.5rem;
			}
			.date {
				margin: 0;
				color: var(--gray);
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                margin-top: auto; /* Push to bottom */
			}
            
            /* --- BENTO LOGIC (Pattern: 12-6-6-4-4-4) --- */
            
            /* Item 1: Hero (Full Width) */
			.post-card:nth-child(6n+1) {
				grid-column: span 12;
                display: flex;
                flex-direction: row; /* Side by side for hero if strictly desktop? Or stacked? Stacked is safer for hero image impact. */
			}
            /* Make Hero Image taller */
            .post-card:nth-child(6n+1) .image-container {
                aspect-ratio: 21/9; 
            }
            .post-card:nth-child(6n+1) .title {
                font-size: 2.5rem;
            }

            /* Items 2 & 3: Half Width */
            .post-card:nth-child(6n+2),
            .post-card:nth-child(6n+3) {
                grid-column: span 6;
            }
            
            /* Items 4, 5, 6: Third Width */
            .post-card:nth-child(6n+4),
            .post-card:nth-child(6n+5),
            .post-card:nth-child(6n+6) {
                grid-column: span 4;
            }
            
            /* Design Polish */
            .post-card:hover .title {
                color: var(--color-red);
            }

			@media (max-width: 960px) {
                /* Tablet: 2 cols */
				.post-card:nth-child(n) {
                    grid-column: span 6;
                }
                .post-card:nth-child(6n+1) {
                    grid-column: span 12;
                    flex-direction: column;
                }
                .post-card:nth-child(6n+1) .image-container {
                    aspect-ratio: 16/9;
                }
			}
            @media (max-width: 600px) {
                /* Mobile: 1 col */
                .post-card:nth-child(n) {
                    grid-column: span 12 !important;
                }
                .title { font-size: 1.25rem; }
                .post-card:nth-child(6n+1) .title { font-size: 1.75rem; }
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul class="bento-grid">
					{
						posts.map((post) => (
							<li class="post-card">
								<a href={`/blog/${post.id}/`}>
                                    <div class="image-container">
									    {post.data.heroImage && (
										    <img width={720} height={360} src={post.data.heroImage} alt="" />
									    )}
                                    </div>
                                    <div class="content">
									    <h4 class="title">{post.data.title}</h4>
									    <p class="date">
										    <FormattedDate date={post.data.pubDate} />
									    </p>
                                    </div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
